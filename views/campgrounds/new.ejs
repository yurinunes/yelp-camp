<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a new Campground</h1>
        <div style="width: 30%; margin: 25px auto">    
            <form action="/campgrounds" method="POST">
                <!--Form group to give spacing between forms-->
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
                </div>
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                <div class="form-group">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description of the place">
                </div>
                    <!--btn-block to make an element as a block element-->
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </form>
        
            <a href="/">Back</a>
        </div>
    </div>    
</div>

<% include ../partials/footer %>